<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75px"
        android:gravity="center|center_horizontal" >

        <com.MobileAnarchy.Android.Widgets.Joystick.DualJoystickView
            android:id="@+id/dualJoystick"
            android:layout_width="match_parent"
            android:layout_height="275dip"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="5dip" >

        </com.MobileAnarchy.Android.Widgets.Joystick.DualJoystickView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <SeekBar
            android:id="@+id/leftStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/rightStar"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp" />

        <ToggleButton
            android:id="@+id/coKick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="go" />

        <ToggleButton
            android:id="@+id/coKickClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="close" />

    </LinearLayout>

</RelativeLayout>